<div class="row titulo">
  <h1>Mensajes</h1>
</div>

<table>
  <thead>
    <tr>
      <th style="padding: 10px 20px;">Nombre</th>
      <th style="padding: 10px 30px;">Correo Electrónico</th>
      <th style="padding: 10px 20px;">Mensaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.email %></td>
        <td><%= message.menssage %></td>
        <td style="padding: 10px 20px;"><%= link_to 'Ver', message, class: "btn btn-primary btn-xl page-scroll" %></td>
        <td><%= link_to 'Eliminar', message, method: :delete, class: "btn btn-primary btn-xl page-scroll", data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
